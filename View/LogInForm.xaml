<Window x:Class="TODOList.View.LogInForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOList.View"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Centriran Grid za Username i Password -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Height="30" VerticalAlignment="Center">Username:</Label>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Username, UpdateSourceTrigger=PropertyChanged}" Height="25" VerticalAlignment="Center"/>

            <Label Grid.Row="1" Grid.Column="0" Height="30" VerticalAlignment="Center">Password:</Label>
            <PasswordBox Name="txtPassword" Grid.Row="1" Grid.Column="1" Height="25" VerticalAlignment="Center"/>
        </Grid>

        <!-- Red sa porukom i Sign in dugmetom -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" >
            <TextBlock VerticalAlignment="Center" Text="If you don't have an account, please "/>
            <Button Content="Sign In" Width="50" Height="30" Click="SignIn_Click"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="80" Click="LogIn_Click"/>
    </Grid>
</Window>
