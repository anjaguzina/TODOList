<Window x:Class="TODOList.View.MyProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOList.View"
        mc:Ignorable="d"
        Title="MyProfile" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Leva strana: Profilna i Import Image dugme -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Border Width="120" Height="120" BorderBrush="Gray" BorderThickness="1" CornerRadius="60" Margin="0,10">
                <Image x:Name="ProfileImage"
                       Stretch="UniformToFill"
                       ClipToBounds="True"
                       Width="100" Height="100" />
            </Border>
            <Button Content="Import Image" Width="120" Margin="0,20,0,0" Click="ImportImage_Click"/>
        </StackPanel>

        <!-- Desna strana: Taskovi i dugmad -->
        <Grid Grid.Column="1" Margin="20,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Lista taskova -->
                <RowDefinition Height="Auto"/>
                <!-- Dugmad za taskove -->
                <RowDefinition Height="Auto"/>
                <!-- Paginacija -->
            </Grid.RowDefinitions>

            <!-- Lista taskova -->
            <ListBox Name="TasksListBox" Grid.Row="0" Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}" FontStyle="Italic" Foreground="DarkSlateGray" Margin="0,2,0,0"/>
                            <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:dd.MM.yyyy}'}" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Dugmad za manipulaciju taskovima -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add new Task" Width="100" Click="AddTask_Click"/>
                <Button Content="Edit Task" Width="120" Click="EditTask_Click"/>
                <Button Content="Delete Task" Width="100" Click="DeleteTask_Click"/>
            </StackPanel>

            <!-- Paging control -->
            <DockPanel Grid.Row="2" Margin="20,10,20,0" LastChildFill="False" Height="45" VerticalAlignment="Center">
                <Button x:Name="buttonRightPage" DockPanel.Dock="Right" Click="MoveToRightPage"
                        BorderBrush="{x:Null}" Background="Transparent" BorderThickness="0">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72A;" FontSize="16"/>
                </Button>

                <Label x:Name="labelCurrentPage" Height="25" Width="40" DockPanel.Dock="Right"
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14"/>

                <Button x:Name="buttonLeftPage" DockPanel.Dock="Right" Click="MoveToLeftPage"
                        BorderBrush="{x:Null}" Background="Transparent" BorderThickness="0">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72B;" FontSize="16"/>
                </Button>
            </DockPanel>

        </Grid>
    </Grid>
</Window>
